<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

		<%= form_for @user, html: { class: "form-horizontal" } do |f| %>
			<!-- Name -->
			<div class="form-group">
				<%= f.label :name, class: "control-label col-xs-2 col-md-2" %>
				<div class="col-xs-10 col-md-10">
				<%= f.text_field :name, class: "form-control" %>
				</div>
			</div>

			<!-- Email -->
			<div class="form-group">
				<%= f.label :email, class: "control-label col-xs-2 col-md-2" %>
				<div class="col-xs-10 col-md-10">
				<%= f.email_field :email, class: "form-control" %>
				</div>
			</div>

			<!-- Password -->
			<div class="form-group">
				<%= f.label :password, class: "control-label col-xs-2 col-md-2" %>
				<div class="col-xs-10 col-md-10">
				<%= f.password_field :Password, class: "form-control" %>
				</div>
			</div>

			<!-- Password Confirmation -->
			<div class="form-group">
				<%= f.label :password_confirmation, class: "control-label col-xs-2 col-md-2" %>
				<div class="col-xs-10 col-md-10">
				<%= f.password_field :password_confirmation, class: "form-control" %>
				</div>
			</div>

			<!-- Submit -->
			<%= f.submit "Create an account", class: "btn btn-primary pull-right" %>
		<% end %>